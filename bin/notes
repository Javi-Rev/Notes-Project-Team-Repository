#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path("../../lib", __FILE__)
require 'notes'

selectors = ARGV

notes = ['Add 1 to 2    1 + 2  # => 3',
'Subtract 5 from 2    2 - 5  # => -3',
'Is 1 less than 2    1 < 2',
'Is 1 equal to 2    1 == 2 # => 3',
'Is 1 greater than 2    1 > 2',
'Is 1 less than or equal to 2    1 <= 2 # => 3',
'Is 1 greater than or equal to 2    1 >= 2',
'Convert 1 to a float    1.to_f # => 3',
'Concatenate two arrays    [1,2] + [2, 3]',
'Remove elements in second array from first    [1,2,4] - [2, 3] # => [1,4]',
'Access an element in an array by its index    ["a","b","c"][0]',
'Find out how big the array is    ["a","b"].length # => 2']

if selectors && selectors[0] == "-h"
  puts "Purpose : Searches notes files for specific keywords\nUsage: notes [selectors]"
else
  puts find_notes(notes, selectors)
end
